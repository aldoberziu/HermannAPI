mixin newArticles(image, link, date, title)
    a.mini-article(href=link)
        img(src=`${image}`)
        .titleAndDate
            h4= date
            h3= title
doctype html 
html 
    head
        block head
            title HG | #{title}
            meta(charset='UTF-8')
            meta(http-equiv='X-UA-Compatible' content='IE=edge')
            meta(name='viewport' content='width=device-width, initial-scale=1.0')
            link(rel='icon' type='image/png' sizes='32x32' href='hermannGmeinerLogoTransparent.png')
            <base href="/">
            link(rel='stylesheet' href='root.css')
            link(rel="stylesheet", href="newCollectionDetailed.css")
            link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/swiper/swiper-bundle.min.css")
            script(src="swiper-bundle.min.js") 
            // Custom Fonts
            link(rel='preconnect' href='https://fonts.googleapis.com')
            link(rel='preconnect' href='https://fonts.gstatic.com' crossorigin='')
            link(href='https://fonts.googleapis.com/css2?family=Rubik:wght@400;500;700&display=swap' rel='stylesheet')
            link(href='https://fonts.googleapis.com/css?family=Poppins' rel='stylesheet')
    body
        include _header

        // Search
        include _search

        // CONTENT
        -const collectionTitle = title.toLowerCase();
        section.main
            h5= detailedDoc.organizer
            h1.project-title= detailedDoc.title
            .text-container
                //- p#introduction-text
                //- | Lorem ipsum dolor sit amet consectetur adipisicing elit. Repellendus suscipit
                //- | soluta provident natus
                //- | impedit distinctio possimus earum architecto accusantium? Odio.
                .swiper.mySwiper
                    .swiper-wrapper
                        each image in detailedDoc.images
                            .swiper-slide
                                img(src=`${image}` alt='picture')
                    .swiper-button-next
                    .swiper-button-prev
                    .swiper-pagination
                h2 Foto nga eventi.
                hr
                .bottom-section
                    .bottom-text
                        p= detailedDoc.description
                    .related-articles
                        a(href=`/${collectionTitle}`)
                            h1 NGJARJE T&Euml; FUNDIT
                        each doc in newDocs 
                            -if(collectionTitle === 'cmime')
                                +newArticles(doc.imageCover, `/${collectionTitle}/${doc.slug}`, doc.year.toLocaleString('en-us', {year: 'numeric', month: 'numeric', day: 'numeric'}), doc.title)
                            -else
                                +newArticles(doc.imageCover, `/${collectionTitle}/${doc.slug}`, doc.createdAt.toLocaleString('en-us', {year: 'numeric', month: 'numeric', day: 'numeric'}), doc.title)

        // Footer
        include _footer
        script(src="template-swiper.js") 